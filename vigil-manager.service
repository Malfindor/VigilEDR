[Unit]
Description=Vigil manager service

[Service]
Type=simple
Restart=on-failure
Environment="PATH=/sbin:/bin:/usr/sbin:/usr/bin"
ExecStartPre=/usr/env/python3 /usr/local/bin/vigil_config_check.py
ExecStart=/usr/env/python3 /usr/local/lib/vigil_core.py
StartLimitInterval=1s
StartLimitBurst=999

[Install]
WantedBy=multi-user.target